@page
@model BookingFootballField.Pages.Staffs.CreateModel
@{
    ViewData["Title"] = "Create";
}


<h1 style="padding-top:1rem;display: flex;
    justify-content: center; font-weight:700">Staff Create</h1>
<hr />
<div class="row" style="display:flex;justify-content:center; margin:0 15px">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="staff.Email" class="control-label"></label>
                <input asp-for="staff.Email" class="form-control" />
                <span asp-validation-for="staff.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="staff.Password" class="control-label"></label>
                <input asp-for="staff.Password" class="form-control" />
                <span asp-validation-for="staff.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="staff.Name" class="control-label"></label>
                <input asp-for="staff.Name" class="form-control" />
                <span asp-validation-for="staff.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="staff.PhoneNumber" class="control-label"></label>
                <input asp-for="staff.PhoneNumber" class="form-control" />
                <span asp-validation-for="staff.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="staff.IsActived" class="control-label"></label>
                <input asp-for="staff.IsActived" class="form-control" />
                <span asp-validation-for="staff.IsActived" class="text-danger"></span>
            </div>
            <div style="display:flex; justify-content:flex-end" class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                    <a class="btn btn-primary" asp-page="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

