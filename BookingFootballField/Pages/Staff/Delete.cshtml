    ViewData["Title"] = "Delete";
}

<h1 style="padding-top:1rem;display: flex;
    justify-content: center; font-weight:700">Staff Delete</h1>

<hr />
<div> 
    <h3 style="padding-bottom:2rem;">Are you sure you want to delete this?</h3>
    <dl class="row" style="margin:0 15px;">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.staff.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.staff.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.staff.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.staff.Password)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.staff.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.staff.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.staff.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.staff.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.staff.IsActived)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.staff.IsActived)
        </dd>
    </dl>

    <form method="post" style="margin-left:2rem;">
        <input type="hidden" asp-for="staff.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-page="./Index">Back to List</a>
    </form>
</div>
