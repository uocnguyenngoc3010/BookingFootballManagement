@page
@model BookingFootballField.Pages.BookingField.IndexModel
@{
    ViewData["Title"] = "Booking Fields";
    Layout = "_Layout";
}

<h1 style="
    margin-top: 10rem;
    display: flex;
    justify-content: center;
    font-weight: 600;
">Booking Fields</h1>

<table class="table" style="margin-top:2rem">
    <thead style="text-align:center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FootballFields[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FootballFields[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FootballFields[0].Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FootballFields[0].Price)
            </th>
            <th>
                Make A Request
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.FootballFields) {
        <tr style="text-align:center">
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td style="align-content:center">
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
               
                <a style="width=150px;height=100px;" asp-page="./Request" asp-route-fieldId="@item.Id">Book now!</a> 
            </td>
        </tr>
}
    </tbody>
</table>

