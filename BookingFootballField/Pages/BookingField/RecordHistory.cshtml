@page
@model BookingFootballField.Pages.BookingField.RecordHistoryModel

@{
    ViewData["Title"] = "RecordHistory";    
}

<div class="text-center">
    <h1 class="display-4" style="padding-top:1rem; font-weight:700">Record History</h1>
</div>

<table class="table">
    <thead>
        <tr>            
            <th scope="col">#</th>
            <th scope="col">Field</th>
            <th scope="col">Price</th>
            <th scope="col">@Html.DisplayNameFor(m => m.BookingRecords.FirstOrDefault().BookingRequest.SendDate)</th>
            <th scope="col">@Html.DisplayNameFor(m => m.BookingRecords.FirstOrDefault().BookingRequest.StartTime)</th>
            <th scope="col">@Html.DisplayNameFor(m => m.BookingRecords.FirstOrDefault().BookingRequest.EndTime)</th>             
        </tr>
    </thead>
    <tbody>
        @{
            for (int i = 0; i < Model.BookingRecords.Count; i++)
            {                
                    <tr>                                                            
                        <td>@(i + 1)</td>
                        <td>@Model.BookingRecords[i].BookingRequest.Field.Name</td>   
                        <td>@Model.BookingRecords[i].BookingRequest.Field.Price</td>
                        <td>@Model.BookingRecords[i].BookingRequest.SendDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@Model.BookingRecords[i].BookingRequest.StartTime.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@Model.BookingRecords[i].BookingRequest.EndTime.ToString("dd/MM/yyyy HH:mm")</td>                                        
                    </tr>
            }            
        }
    </tbody>
</table>